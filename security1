    <script>
        // Form submission
        document.getElementById('leadForm').onsubmit = function(e) {
            e.preventDefault();
            alert('–°–ø–∞—Å–∏–±–æ! –ú—ã —Å–≤—è–∂–µ–º—Å—è —Å –≤–∞–º–∏ –≤ —Ç–µ—á–µ–Ω–∏–µ 24 —á–∞—Å–æ–≤ –¥–ª—è –ø—Ä–µ–¥–æ—Å—Ç–∞–≤–ª–µ–Ω–∏—è –ø–µ—Ä—Å–æ–Ω–∞–ª—å–Ω–æ–π —Å—Ç—Ä–∞—Ç–µ–≥–∏–∏ –∏–Ω–≤–µ—Å—Ç–∏—Ä–æ–≤–∞–Ω–∏—è.');
        }

        // Exit intent popup
        let exitIntentTriggered = false;
        document.addEventListener('mouseleave', function(e) {
            if (e.clientY <= 0 && !exitIntentTriggered) {
                document.getElementById('exitPopup').style.display = 'block';
                exitIntentTriggered = true;
            }
        });

        function closePopup() {
            document.getElementById('exitPopup').style.display = 'none';
        }

        function submitExitForm() {
            alert('–û—Ç–ª–∏—á–Ω–æ! –ü—Ä–æ–≤–µ—Ä—å—Ç–µ email –≤ —Ç–µ—á–µ–Ω–∏–µ —á–∞—Å–∞ - –º—ã –æ—Ç–ø—Ä–∞–≤–∏–º –≤–∞–º –±–µ—Å–ø–ª–∞—Ç–Ω—ã–π –∞–Ω–∞–ª–∏–∑ –ø–æ—Ä—Ç—Ñ–µ–ª—è.');
            closePopup();
        }

        function scrollToForm() {
            document.querySelector('.hero-right').scrollIntoView({ behavior: 'smooth' });
        }

        // Phone number formatting
        document.querySelector('input[name="phone"]').addEventListener('input', function(e) {
            let value = e.target.value.replace(/\D/g, '');
            if (value.length <= 11) {
                value = value.replace(/(\d{1})(\d{3})(\d{3})(\d{2})(\d{2})/, '+$1 $2 $3-$4-$5');
                e.target.value = value;
            }
        });

        // Scroll animations
        window.addEventListener('scroll', function() {
            const features = document.querySelectorAll('.feature');
            features.forEach(feature => {
                const rect = feature.getBoundingClientRect();
                if (rect.top < window.innerHeight - 100) {
                    feature.style.animation = 'fadeInUp 0.6s ease forwards';
                }
            });
        });
    </script>

    <style>
        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
